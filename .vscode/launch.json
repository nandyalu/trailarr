    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.main:trailarr_api",
                "--reload",
                "--port=7888"
            ], 
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Docker: Python - Fastapi",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "fastapi"
            }
        },
        {
            "name": "ng serve",
            "type": "msedge",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "cwd": "${workspaceFolder}/frontend", // Added this line
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}/frontend/"
        },
        {
            "name": "ng test",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: test",
            "cwd": "${workspaceFolder}/frontend", // Added this line
            "url": "http://localhost:9876/debug.html"
        }
    ]
}