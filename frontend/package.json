{
  "name": "trailarr",
  "version": "0.6.3",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "dev": "ng build --configuration development",
    "watch": "ng build --watch --configuration development",
    "test": "jest --ci --logHeapUsage",
    "test:dev": "jest --updateSnapshot --bail --runInBand",
    "test:watch": "npm run test:dev -- --watchAll",
    "test:coverage": "jest --coverage",
    "openapi": "ng-openapi-gen",
    "postinstall": "npm run openapi",
    "postopenapi": "prettier --write generated-sources --ignore-path=.prettierignore"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@popperjs/core": "^2.11.8",
    "ngx-timeago": "^3.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@angular/localize": "^21.0.0",
    "@types/jest": "^29.5.14",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^16.0.0",
    "ng-mocks": "^14.14.0",
    "ng-openapi-gen": "^0.53.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-mockery": "^1.2.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  }
}